<h1>Here's <%= @task.title %></h1>

<h2>Details:</h2>

<p><%= @task.details %></p>

<%= form_for(@task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :details %>
  <%= f.text_field :details%>

  <%= f.label :completed %>
  <%= f.check_box :completed%>

  <%= f.submit %>
<% end %>


<%= link_to 'Back', :back %>




